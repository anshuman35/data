<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="creditCardAndDebitRowModel" type="com.bhubaneswar.app.modules.creditcardanddebit.data.model.CreditCardAndDebitRowModel"/>
    </data>
    <com.google.android.material.card.MaterialCardView
        android:clickable="true" android:id="@+id/card"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:cardBackgroundColor="@color/light_blue_A200"
        app:cardCornerRadius="@dimen/_5px"
        app:cardElevation="@dimen/_1px" app:cardUseCompatPadding="true" style="@style/groupStylelight_blue_A200cornerRadius">
        <LinearLayout android:layout_gravity="center"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/_24px"
            android:layout_marginEnd="@dimen/_21px"
            android:layout_marginStart="@dimen/_21px"
            android:layout_marginTop="@dimen/_24px"
            android:layout_width="match_parent"
            android:orientation="vertical" style="@style/groupStyle">
            <ImageView android:layout_gravity="start"
                android:layout_height="@dimen/_22px"
                android:layout_marginEnd="@dimen/_3px"
                android:layout_marginStart="@dimen/_3px" android:layout_width="@dimen/_36px"/>
            <TextView android:gravity="top|center"
                android:id="@+id/txt63269124"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_31px"
                android:layout_width="match_parent"
                android:text="@{creditCardAndDebitRowModel.txt63269124}" style="@style/textStylePoppinsbold24"/>
            <LinearLayout android:layout_gravity="start"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_17px"
                android:layout_width="match_parent"
                android:orientation="horizontal" style="@style/groupStyle">
                <TextView android:gravity="top|start"
                    android:id="@+id/txtCardHolder"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.43"
                    android:layout_width="0dp"
                    android:text="@{creditCardAndDebitRowModel.txtCardHolder}" style="@style/textStylePoppinsregular10_2"/>
                <TextView android:gravity="top|start"
                    android:id="@+id/txtCardSave"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_37px"
                    android:layout_weight="0.57"
                    android:layout_width="0dp"
                    android:text="@{creditCardAndDebitRowModel.txtCardSave}" style="@style/textStylePoppinsregular10_2"/>
            </LinearLayout>
            <LinearLayout android:layout_gravity="start"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2px"
                android:layout_width="match_parent"
                android:orientation="horizontal" style="@style/groupStyle">
                <TextView android:gravity="top|center"
                    android:id="@+id/txtDominicOvo"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.48"
                    android:layout_width="0dp"
                    android:text="@{creditCardAndDebitRowModel.txtDominicOvo}" style="@style/textStylePoppinsbold10_3"/>
                <TextView android:gravity="top|center"
                    android:id="@+id/txt192042"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_34px"
                    android:layout_weight="0.51"
                    android:layout_width="0dp"
                    android:text="@{creditCardAndDebitRowModel.txt192042}" style="@style/textStylePoppinsbold10_3"/>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>

<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="searchResult2VM" type="com.bhubaneswar.app.modules.searchresult2.data.viewmodel.SearchResult2VM"/>
    </data>
    <LinearLayout android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStylewhite_1">
        <LinearLayout android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_16px"
            android:layout_marginStart="@dimen/_16px"
            android:layout_width="match_parent" android:orientation="horizontal">
            <EditText
                android:background="@drawable/rectangle_border_blue_50_radius_5"
                android:fontFamily="@font/poppins"
                android:gravity="top|start"
                android:hint="@string/lbl_search_product"
                android:id="@+id/etSearchProduct"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:layout_weight="0.77" android:layout_width="0dp"
                android:paddingBottom="@dimen/_12px"
                android:paddingStart="@dimen/_30px"
                android:paddingTop="@dimen/_12px"
                android:singleLine="true"
                android:textColor="@color/bluegray_300"
                android:textColorHint="@color/bluegray_300"
                android:textFontWeight="400"
                android:textSize="@dimen/_12px" android:textStyle="normal"/>
            <ImageView android:layout_gravity="center_vertical"
                android:layout_height="@dimen/_24px"
                android:layout_marginStart="@dimen/_16px" android:layout_width="@dimen/_24px"/>
            <ImageView android:layout_gravity="center_vertical"
                android:layout_height="@dimen/_24px"
                android:layout_marginStart="@dimen/_16px" android:layout_width="@dimen/_24px"/>
        </LinearLayout>
        <View android:background="@color/blue_50"
            android:layout_gravity="center_horizontal"
            android:layout_height="@dimen/_1px"
            android:layout_marginTop="@dimen/_16px" android:layout_width="match_parent"/>
        <include android:id="@+id/included"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_16px"
            android:layout_marginStart="@dimen/_16px"
            android:layout_marginTop="@dimen/_15px"
            android:layout_width="match_parent"
            layout="@layout/component_search_result" searchResultModel="@{searchResult2VM.includedModel}"/>
        <ImageView android:layout_gravity="center_horizontal"
            android:layout_height="@dimen/_72px"
            android:layout_marginEnd="@dimen/_50px"
            android:layout_marginStart="@dimen/_50px"
            android:layout_marginTop="@dimen/_100px" android:layout_width="@dimen/_72px"/>
        <TextView android:gravity="top|center"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_50px"
            android:layout_marginStart="@dimen/_50px"
            android:layout_marginTop="@dimen/_16px"
            android:layout_width="match_parent"
            android:text="@string/msg_product_not_fou" style="@style/textStylePoppinsbold24_1"/>
        <TextView android:gravity="top|center"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_36px"
            android:layout_marginStart="@dimen/_36px"
            android:layout_marginTop="@dimen/_8px"
            android:layout_width="match_parent"
            android:text="@string/msg_thank_you_for_s" style="@style/textStylePoppinsregular12"/>
        <androidx.appcompat.widget.AppCompatButton
            android:gravity="center" android:id="@+id/btnBackToHome"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_16px"
            android:layout_marginStart="@dimen/_16px"
            android:layout_marginTop="@dimen/_16px"
            android:layout_width="match_parent"
            android:paddingBottom="@dimen/_16px"
            android:paddingEnd="@dimen/_30px"
            android:paddingStart="@dimen/_30px"
            android:paddingTop="@dimen/_16px"
            android:text="@string/lbl_back_to_home" style="@style/textStylePoppinsbold14"/>
    </LinearLayout>
</layout>

<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="listCategoryRowModel" type="com.bhubaneswar.app.modules.listcategory.data.model.ListCategoryRowModel"/>
    </data>
    <LinearLayout android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStylewhite_1">
        <LinearLayout android:layout_gravity="start"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/_16px"
            android:layout_marginEnd="@dimen/_16px"
            android:layout_marginStart="@dimen/_16px"
            android:layout_marginTop="@dimen/_16px"
            android:layout_width="match_parent" android:orientation="horizontal">
            <ImageView android:layout_gravity="center_vertical"
                android:layout_height="@dimen/_24px" android:layout_width="@dimen/_24px"/>
            <TextView android:gravity="top|start"
                android:id="@+id/txtShirt"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16px"
                android:layout_weight="0.67" android:layout_width="0dp"
                android:text="@{listCategoryRowModel.txtShirt}" style="@style/textStylePoppinsbold12"/>
        </LinearLayout>
    </LinearLayout>
</layout>

<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="successScreenVM" type="com.bhubaneswar.app.modules.successscreen.data.viewmodel.SuccessScreenVM"/>
    </data>
    <LinearLayout android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStylewhite_1">
        <ImageView android:layout_gravity="center_horizontal"
            android:layout_height="@dimen/_72px"
            android:layout_marginTop="@dimen/_100px" android:layout_width="@dimen/_72px"/>
        <TextView android:gravity="top|center"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16px"
            android:layout_width="wrap_content"
            android:text="@string/lbl_success" style="@style/textStylePoppinsbold24_1"/>
        <TextView android:gravity="top|center"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_36px"
            android:layout_marginStart="@dimen/_36px"
            android:layout_marginTop="@dimen/_8px"
            android:layout_width="match_parent"
            android:text="@string/msg_thank_you_for_s" style="@style/textStylePoppinsregular12_1"/>
        <androidx.appcompat.widget.AppCompatButton
            android:gravity="center" android:id="@+id/btnBackToOrder"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_16px"
            android:layout_marginStart="@dimen/_16px"
            android:layout_marginTop="@dimen/_16px"
            android:layout_width="match_parent"
            android:paddingBottom="@dimen/_16px"
            android:paddingEnd="@dimen/_30px"
            android:paddingStart="@dimen/_30px"
            android:paddingTop="@dimen/_16px"
            android:text="@string/lbl_back_to_order" style="@style/textStylePoppinsbold14"/>
    </LinearLayout>
</layout>
